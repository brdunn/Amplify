<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:test="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/playlist_card_artwork"
        android:layout_width="65dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_albums_black_24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintGuide_percent="0.5"
        android:orientation="horizontal"/>

    <TextView
        android:id="@+id/playlist_card_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/guideline"
        app:layout_constraintEnd_toStartOf="@id/playlist_card_menu"
        app:layout_constraintStart_toEndOf="@id/playlist_card_artwork"
        android:maxLines="1"
        android:textAlignment="viewEnd"
        android:textStyle="bold"
        test:text="Playlist Title" />

    <TextView
        android:id="@+id/playlist_card_num_tracks"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/guideline"
        app:layout_constraintEnd_toStartOf="@id/playlist_card_menu"
        app:layout_constraintStart_toEndOf="@id/playlist_card_artwork"
        android:maxLines="1"
        android:textAlignment="viewEnd"
        test:text="200 Songs" />

    <ImageView
        android:id="@+id/playlist_card_menu"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/playlist_card_title"
        app:layout_constraintBottom_toBottomOf="@id/playlist_card_num_tracks"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingHorizontal="16dp"
        android:src="@drawable/ic_menu_18dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"/>

</androidx.constraintlayout.widget.ConstraintLayout>
