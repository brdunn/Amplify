<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/playlist_bottom_sheet_album_art"
            android:layout_width="64dp"
            android:layout_height="64dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_albums_black_24dp"/>

        <TextView
            android:id="@+id/playlist_bottom_sheet_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginHorizontal="8dp"
            app:layout_constraintTop_toTopOf="@id/playlist_bottom_sheet_album_art"
            app:layout_constraintStart_toEndOf="@id/playlist_bottom_sheet_album_art"
            app:layout_constraintBottom_toTopOf="@id/song_bottom_sheet_artist"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="Song Name" />

        <TextView
            android:id="@+id/song_bottom_sheet_artist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/playlist_bottom_sheet_title"
            app:layout_constraintBottom_toBottomOf="@id/playlist_bottom_sheet_album_art"
            app:layout_constraintStart_toEndOf="@id/playlist_bottom_sheet_album_art"
            app:layout_constraintEnd_toEndOf="parent"
            android:maxLines="1"
            android:layout_marginHorizontal="8dp"
            android:textSize="16sp"
            tools:text="Artist" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/song_bottom_sheet_play_next_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        app:icon="@drawable/ic_playlists_black_24dp"
        android:text="Play next"
        android:textAlignment="viewStart"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"/>

    <Button
        android:id="@+id/song_bottom_sheet_add_to_queue_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        app:icon="@drawable/ic_add_to_queue_24dp"
        android:text="Add to queue"
        android:textAlignment="viewStart"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"/>

    <Button
        android:id="@+id/song_bottom_sheet_album_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        app:icon="@drawable/ic_albums_black_24dp"
        android:text="Go to album"
        android:textAlignment="viewStart"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"/>

    <Button
        android:id="@+id/song_bottom_sheet_artist_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        app:icon="@drawable/ic_artists_black_24dp"
        android:text="Go to artist"
        android:textAlignment="viewStart"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"/>

    <Button
        android:id="@+id/song_bottom_sheet_playlist_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        app:icon="@drawable/ic_trash_24dp"
        android:text="Remove from Playlist"
        android:textAlignment="viewStart"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"/>

</LinearLayout>
